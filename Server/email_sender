const nodemailer = require('nodemailer');

const transporter = nodemailer.createTransport({
  host: 'smtp.gmail.com',
  port: 587,
  secure: false, // true for 465, false for other ports
  auth: {
    user: 'mireflexstoreshop@gmail.com', // Indirizzo email del mittente
    pass: 'asff qosu izdr immj ' // Password dell'indirizzo email del mittente
  }
});

const sendEmail = async (body) => {
  const { email } = body;

  try {
    const mailOptions = {
      from: 'mireflexstoreshop@gmail.com', // Indirizzo email del mittente
      to: email, // Indirizzo email del destinatario
      subject: "Password Recovery MiReflex Shop", // Oggetto della email
      text: "", // Testo della email
      html: 'Hello dearest client, by clicking this link you will be able to recover your password: http://localhost:3000/Login/Reset_Password' // Testo HTML della email
    };
    await transporter.sendMail(mailOptions);
    
  } catch (error) {
    console.error(error);
    
  }

  
};
module.exports = {
    sendEmail
  };